{
  "name": "whistant_local",
  "version": "1.0.2",
  "description": "Link your Ollama server (Windows, Linux, Mac) to iPhone with Whistant",
  "main": "main.js",
  "author": "Whistant",
  "scripts": {
    "start": "electron .",
    "icon:build": "node scripts/convert-icon.js",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:linux": "electron-builder --linux",
    "build:appimage": "electron-builder --linux AppImage",
    "build:deb": "electron-builder --linux deb",
    "build:snap": "electron-builder --linux snap",
    "build:win": "electron-builder --win portable",
    "build:win:x64": "electron-builder --win portable --x64",
    "build:win:ia32": "electron-builder --win portable --ia32",
    "build:mac": "electron-builder --mac",
    "build:mac:universal": "electron-builder --mac --universal"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "dotenv": "^17.2.3",
    "jsonwebtoken": "^9.0.0",
    "png-to-ico": "^3.0.1"
  },
  "devDependencies": {
    "electron": "^39.2.5",
    "electron-builder": "^26.7.0"
  },
  "build": {
    "appId": "com.whistant.local",
    "productName": "Whistant_Local",
    "asar": true,
    "asarUnpack": [
      "bin/**/*"
    ],
    "compression": "normal",
    "files": [
      "main.js",
      "preload.js",
      "config/defaults.json",
      "ui/**/*",
      "bin/**/*",
      "package.json",
      "!dist/**",
      "!.git/**",
      "!**/*.md",
      "!**/test/**",
      "!**/tests/**",
      "!**/*.map"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "ui/icon.ico",
      "artifactName": "${productName}-${version}.${ext}"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Network",
      "icon": "ui/icon.png",
      "maintainer": "Whisolla <contact@whisolla.com>"
    },
    "appImage": {
      "artifactName": "${productName}-${version}.${ext}"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "ui/icon.icns",
      "category": "public.app-category.utilities",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "identity": null
    },
    "directories": {
      "output": "dist"
    }
  }
}
